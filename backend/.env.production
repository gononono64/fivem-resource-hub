# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# Environment
NODE_ENV=production
PORT=3001

# Frontend URL (Vercel will provide this)
FRONTEND_URL=https://your-app-name.vercel.app

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=24h

# GitHub OAuth (You'll need to create a GitHub OAuth app)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://your-backend-url.railway.app/api/auth/github/callback

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
